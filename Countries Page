    <script>
  function flipCard(card) {
    card.classList.toggle('flipped');
  }

  function unflipCard(button) {
    
    let countryCard = button.closest('.country-card');
    if (countryCard) {
      countryCard.classList.remove('flipped');
    }
  }


  function toggleHotels(button) {
    const hotelsList = button.nextElementSibling; 
    if (hotelsList) {
      hotelsList.style.display = hotelsList.style.display === 'block' ? 'none' : 'block';
    }
  }
</script>
